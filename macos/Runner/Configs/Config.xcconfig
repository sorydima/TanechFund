// Base configuration for REChain VC Lab macOS app
// This file contains common settings for all build configurations

// Include Flutter configuration
#include "Flutter/Flutter-Generated.xcconfig"

// Include app-specific configuration
#include "AppInfo.xcconfig"

// Include warnings configuration
#include "Warnings.xcconfig"

// macOS Deployment Target
MACOSX_DEPLOYMENT_TARGET = 10.14

// Swift Language Version
SWIFT_VERSION = 5.0

// Architecture settings
ARCHS = arm64 x86_64
VALID_ARCHS = arm64 x86_64

// Code signing
CODE_SIGN_STYLE = Automatic
DEVELOPMENT_TEAM = 

// Bundle settings
GENERATE_INFOPLIST_FILE = NO
INFOPLIST_FILE = Runner/Info.plist

// Asset catalog settings
ASSETCATALOG_COMPILER_APPICON_NAME = AppIcon

// Build settings
ENABLE_HARDENED_RUNTIME = YES
ENABLE_APP_SANDBOX = YES

// Swift settings
SWIFT_OPTIMIZATION_LEVEL = -Onone
SWIFT_COMPILATION_MODE = singlefile

// Debug information
DEBUG_INFORMATION_FORMAT = dwarf
ENABLE_TESTABILITY = YES

// Optimization
GCC_OPTIMIZATION_LEVEL = 0
ONLY_ACTIVE_ARCH = YES

// Warnings
GCC_WARN_INHIBIT_ALL_WARNINGS = NO
CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER = NO

// Framework search paths
FRAMEWORK_SEARCH_PATHS = $(inherited) $(PROJECT_DIR)/Flutter/ephemeral

// Library search paths
LIBRARY_SEARCH_PATHS = $(inherited) $(PROJECT_DIR)/Flutter/ephemeral

// Header search paths
HEADER_SEARCH_PATHS = $(inherited) $(PROJECT_DIR)/Flutter/ephemeral

// Other linker flags
OTHER_LDFLAGS = $(inherited) -framework FlutterMacOS

// Preprocessor definitions
GCC_PREPROCESSOR_DEFINITIONS = $(inherited) FLUTTER_BUILD_MODE=debug

// Build system
BUILD_SYSTEM = new
